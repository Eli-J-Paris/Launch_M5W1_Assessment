@model IEnumerable<Album>

<h2>Albums</h2>

<div class="mb-3">
    <a asp-action="New" class="btn btn-success">
        <i class="fas fa-plus"></i> Create New Album
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.Title</td>
                <td>@album.Artist</td>
                <td>@album.Rating</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@album.Id" onsubmit="return confirm('Are you sure you want to delete this album?');">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
